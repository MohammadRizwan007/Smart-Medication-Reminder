<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bottom_theme_color">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cgreen"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/app_name" />
    <EditText
        android:id="@+id/eventname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:hint="Type Medicine Name"
        android:inputType="textShortMessage"
        tools:ignore="HardcodedText"
        android:autofillHints=""
        tools:targetApi="o" />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/setTimeBtn"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:contentDescription="TODO"
            android:drawableTint="@color/white"
            android:text="select Time"
            android:textColor="@color/white"
            tools:ignore="ContentDescription,HardcodedText" />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/setTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="--:-- AM"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            android:layout_weight="2"
            />




    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:paddingLeft="10dp"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:id="@+id/setDateBtn"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:text="select Date"
            android:background="@android:color/transparent"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText"
            android:layout_weight="1"
            />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/setDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="----/--/--"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            android:layout_weight="2"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/addevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/background_button"
        android:text="Add Medicine"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <CheckBox
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Alarm"
        android:textColor="@android:color/white"
        android:buttonTint="@android:color/white"
        android:id="@+id/setAlarmCheckBox"
        android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>