<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cgreen"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/app_name" />

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Add your first reminder"
                android:textColor="@color/blue"
                android:textSize="25sp" />
            <ImageView android:id="@+id/image1"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/nf"
                android:tint="@color/blue" />

            <LinearLayout android:id="@+id/c_frame1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout android:id="@+id/medication_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_button"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="3dp"
                            android:src="@drawable/medication"></ImageView>

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Medication"
                            android:textColor="@color/bottom_blue"
                            android:textSize="15dp"></TextView>
                    </LinearLayout>

                    <TextView android:id="@+id/date"
                        android:visibility="gone"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:alpha="0.8"
                        android:background="@drawable/background_button"
                        android:drawableLeft="@drawable/ic_calender"
                        android:drawableTint="@color/bottom_blue"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center_vertical"
                        android:text="----/--/--"
                        android:textColor="@color/bottom_blue"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout android:id="@+id/measurement_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_button"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/measurement"></ImageView>

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Measurement"
                        android:textColor="@color/bottom_blue"
                        android:textSize="15dp"></TextView>
                </LinearLayout>

                <LinearLayout android:id="@+id/activity_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_button"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/activity"></ImageView>

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Activity"
                        android:textColor="@color/bottom_blue"
                        android:textSize="15dp"></TextView>
                </LinearLayout>

                <LinearLayout android:id="@+id/appointment_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_button"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/appointment"></ImageView>

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Appointment"
                        android:textColor="@color/bottom_blue"
                        android:textSize="15dp"></TextView>
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>
    </ScrollView>



</LinearLayout>