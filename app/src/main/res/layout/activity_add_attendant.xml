<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addAttendant">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center_horizontal"
            android:text="            ADD
             \n      ATTENDANT"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="italic" />


        <ImageView
            android:id="@+id/attendantImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/profile" />

        <EditText
            android:id="@+id/EDT_AttendantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/backgroundeditview"
            android:ems="10"
            android:layout_margin="15dp"
            android:gravity="clip_horizontal|center|clip_vertical"
            android:hint="User Name"
            android:drawableLeft="@drawable/ic_baseline_username_24"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/EDT_AttendantPhomeNO"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/backgroundeditview"
            android:ems="10"
            android:gravity="clip_horizontal|center|clip_vertical"
            android:hint="+92 3041234567"
            android:inputType="phone"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            />

        <EditText
            android:id="@+id/EDT_AttendantRele"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundeditview"
            android:ems="10"
            android:gravity="clip_horizontal|center|clip_vertical"
            android:hint="Relationship"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_baseline_relationship"
            />

        <Button
            android:padding="10dp"
            android:layout_margin="25dp"
            android:id="@+id/btn_SaveAttendant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_gradient"
            android:text=" Save "
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


    </LinearLayout>

</ScrollView>