<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp_DoctorActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="15dp"
                android:background="#00FFFEFE"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/IV_DocprofPic"
                    android:layout_width="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/doctor" />

                <TextView
                    android:id="@+id/txtUploadImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:shadowColor="#090808"
                    android:text="Upload Image"
                    android:textColor="#050505"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view"
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="#070707" />

                <EditText
                    android:id="@+id/eTuserNameDoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/backgroundeditview"
                    android:ems="10"
                    android:gravity="clip_horizontal|center|clip_vertical"
                    android:hint="User Name"
                    android:drawableLeft="@drawable/ic_baseline_username_24"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/eTphoneDoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/backgroundeditview"
                    android:ems="10"
                    android:gravity="clip_horizontal|center|clip_vertical"
                    android:hint="+92 3041234567"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_baseline_phone_24"
                    />

                <EditText
                    android:id="@+id/eTemailDoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/backgroundeditview"
                    android:ems="10"
                    android:gravity="clip_horizontal|center|clip_vertical"
                    android:hint="abc@gmail.com"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    />

                <EditText
                    android:id="@+id/eTpasswordDoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroundeditview"
                    android:ems="10"
                    android:gravity="clip_horizontal|center|clip_vertical"
                    android:hint="password(e.g:Abc1234)"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"
                    />
                <TextView
                    android:id="@+id/tv_passStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="240dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic"/>

                <Button
                    android:id="@+id/btnRegisterDoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_gradient"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

